<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sync Service Tree View -->
    <record id="woodoo_sync_service_tree_view" model="ir.ui.view">
        <field name="name">woodoo.sync.service.tree</field>
        <field name="model">woodoo.sync.service</field>
        <field name="arch" type="xml">
            <tree string="WooDoo Sync Services">
                <field name="name"/>
                <field name="state" decoration-success="state == 'idle'" decoration-warning="state == 'running'" decoration-danger="state == 'error'"/>
                <field name="last_sync_date"/>
                <field name="last_error"/>
            </tree>
        </field>
    </record>

    <!-- Sync Service Form View -->
    <record id="woodoo_sync_service_form_view" model="ir.ui.view">
        <field name="name">woodoo.sync.service.form</field>
        <field name="model">woodoo.sync.service</field>
        <field name="arch" type="xml">
            <form string="WooDoo Sync Service">
                <header>
                    <button name="sync_all" string="Sync All" type="object" class="btn-primary"/>
                    <button name="sync_customers" string="Sync Customers" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="idle,running,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Sync Service Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="last_sync_date"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Sync Logs" name="sync_logs">
                            <field name="sync_log_ids" readonly="1">
                                <tree>
                                    <field name="sync_date"/>
                                    <field name="sync_type"/>
                                    <field name="message"/>
                                    <field name="records_count"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Last Error" name="last_error" attrs="{'invisible': [('last_error', '=', False)]}">
                            <field name="last_error" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sync Log Tree View -->
    <record id="woodoo_sync_log_tree_view" model="ir.ui.view">
        <field name="name">woodoo.sync.log.tree</field>
        <field name="model">woodoo.sync.log</field>
        <field name="arch" type="xml">
            <tree string="WooDoo Sync Logs" default_order="sync_date desc">
                <field name="sync_date"/>
                <field name="sync_type" decoration-success="sync_type in ['customers', 'orders', 'products']" decoration-danger="sync_type == 'error'" decoration-info="sync_type == 'info'"/>
                <field name="message"/>
                <field name="records_count"/>
            </tree>
        </field>
    </record>

    <!-- Sync Log Form View -->
    <record id="woodoo_sync_log_form_view" model="ir.ui.view">
        <field name="name">woodoo.sync.log.form</field>
        <field name="model">woodoo.sync.log</field>
        <field name="arch" type="xml">
            <form string="Sync Log Entry" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="sync_date"/>
                            <field name="sync_type"/>
                        </group>
                        <group>
                            <field name="records_count"/>
                            <field name="sync_service_id"/>
                        </group>
                    </group>
                    <group string="Message">
                        <field name="message" widget="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="woodoo_sync_service_action" model="ir.actions.act_window">
        <field name="name">WooDoo Sync Services</field>
        <field name="res_model">woodoo.sync.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WooDoo sync service
            </p>
            <p>
                Sync services allow you to synchronize data between WooCommerce and Odoo.
            </p>
        </field>
    </record>

    <record id="woodoo_sync_log_action" model="ir.actions.act_window">
        <field name="name">WooDoo Sync Logs</field>
        <field name="res_model">woodoo.sync.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_sync_type': 1}</field>
    </record>

    <!-- Search Views -->
    <record id="woodoo_sync_log_search_view" model="ir.ui.view">
        <field name="name">woodoo.sync.log.search</field>
        <field name="model">woodoo.sync.log</field>
        <field name="arch" type="xml">
            <search string="Search Sync Logs">
                <field name="sync_type"/>
                <field name="message"/>
                <field name="sync_date"/>

                <filter string="Errors" name="filter_errors" domain="[('sync_type', '=', 'error')]"/>
                <filter string="Customers" name="filter_customers" domain="[('sync_type', '=', 'customers')]"/>
                <filter string="Orders" name="filter_orders" domain="[('sync_type', '=', 'orders')]"/>
                <filter string="Products" name="filter_products" domain="[('sync_type', '=', 'products')]"/>

                <separator/>
                <filter string="Today" name="filter_today" domain="[('sync_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="filter_week" domain="[('sync_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Sync Type" name="group_by_sync_type" context="{'group_by': 'sync_type'}"/>
                    <filter string="Sync Date" name="group_by_sync_date" context="{'group_by': 'sync_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="woodoo_main_menu" name="WooDoo" sequence="95" web_icon="woodoo,static/description/icon.png"/>

    <!-- Configuration Menu directly under WooDoo main menu -->
    <menuitem id="woodoo_configuration_menu"
              name="Configuration"
              parent="woodoo_main_menu"
              action="woodoo_config_settings_action"
              sequence="5"
              groups="base.group_system"/>

    <menuitem id="woodoo_sync_menu" name="Synchronization" parent="woodoo_main_menu" sequence="10"/>

    <menuitem id="woodoo_sync_service_menu"
              name="Sync Services"
              parent="woodoo_sync_menu"
              action="woodoo_sync_service_action"
              sequence="10"/>

    <menuitem id="woodoo_sync_log_menu"
              name="Sync Logs"
              parent="woodoo_sync_menu"
              action="woodoo_sync_log_action"
              sequence="20"/>

    <!-- Additional menu under Settings for system administrators -->
    <menuitem id="woodoo_settings_menu"
              name="WooDoo Configuration"
              parent="base.menu_administration"
              action="woodoo_config_settings_action"
              sequence="100"
              groups="base.group_system"/>
</odoo>
