<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Main sync job -->
        <record id="simple_cron_sync_woocommerce" model="ir.cron">
            <field name="name">Simple WooCommerce Sync</field>
            <field name="model_id" ref="model_simple_woocommerce_sync"/>
            <field name="state">code</field>
            <field name="code">model.sync_woocommerce_orders()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="priority">10</field>
        </record>

        <!-- Reset stuck jobs (runs once per hour) -->
        <record id="simple_cron_reset_stuck" model="ir.cron">
            <field name="name">Reset Stuck WooCommerce Sync</field>
            <field name="model_id" ref="model_simple_woocommerce_sync"/>
            <field name="state">code</field>
            <field name="code">model.reset_running_flag()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="priority">5</field>
        </record>
    </data>
</odoo>
